<div class="container">
  <div class="row">
    <h3 class="col-8 text-center">投稿内容編集</h3>
      <%= form_with model: [:customers, @food], local: true do |f| %>
        <div class="food-image form-group">
          <%= attachment_image_tag @food, :image, class: "img-square", fallback: "no_img.jpg", size:"250x200" %>
        </div>
        <div class="form-group">
          <%= f.attachment_field :image %>
        </div>
        <div class="form-group">
          <div class="recipe-name" >
            <%= f.label "料理名" %>
            <%= f.text_field :food_name %>
          </div>
          <div class="recipe-kcal" >
            <%= f.label "kcal" %>
            <%= f.text_field :kcal %>
          </div>
          <div class="recipe-introduction" >
            <%= f.label "料理説明" %>
            <%= f.text_area :introduction %>
          </div>
          <div class="form-group">
            <%= f.submit "変更を保存", class: "btn btn-primary" %>
          </div>
          <%= link_to "投稿を削除", customers_food_path, class: "btn btn-danger", method: :delete, "data-confirm" => "削除しますか?" %>
        </div>
      <% end %>
  </div>
</div>