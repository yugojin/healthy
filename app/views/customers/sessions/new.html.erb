<div class="container">
  <div class="row">
    <div class="d-flex text-center flex-column">
      <h2 class="head-line">ログイン</h2><br>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
          </div>

          <div class="field form-group">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
          </div>

          <div class="field form-group">
            <%= f.submit "ログイン",class: "btn btn-primary btn-lg" %>
          </div>

          <div class="befor-sing-up">
      　    <p class=sign-up-message"">登録がお済みではない方</p>
      　      <span class="new-link">
       　       <%= link_to "こちら", new_registration_path(resource_name), data: {"turbolinks" => false}, class: "btn-link" %>から新規登録を行ってください。
      　      </span>
    　     </div>
        <% end %>
      </div>
  </div>
</div>





