<div class="container">
  <div class="row">
  	<div class="col-12">
  			<%= render partial: 'customers/foods/serach' %>
  	</div>
  </div>
</div>
  	
<div class="container">
	<div class="row">
		<div class="col-md-10 text-center">
			<div class="d-flex">
				<% @foods.each do |food| %>
					<div class="top-recommended">
				 		<%= link_to customers_food_path(food.id), class: "btn-link" do %>
							<div id="img_field" class="top-food">
								<%= attachment_image_tag(food, :image, size: "180x130", fallback: "no_img.jpg") %>
							</div>
							<p class="top-foods-name"><%= food.food_name %></p>
							<p class="food-kcal"><%= food.kcal %>kcal</p>
						<% end %>
					</div>
				<% end %>
			</div>
			<%= link_to "もっと見る>", customers_foods_path, class: "btn-link  text-center" %>
		</div>

		<div class="rank col-md-2">
			<%= render partial: 'customers/foods/rank', locals: {  foods: @foods } %>
		</div>
	</div>
</div>
