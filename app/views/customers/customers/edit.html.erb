<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-9">
      <h3 class="text-center head-line col-sm-3 bg-info">登録情報編集</h3>
          
        <%= form_with model: @customer, local:true do |f| %>
          <div class="field form-group col-xs-12"></br>
            <%= f.label :"名前", class: "col-sm-4" %>
            <%= f.text_field :name, autofocus: true, class: "col-sm-3" %>
          </div>
            
          <div class="field form-group col-xs-12">
            <%= f.label :"フリガナ", class: "col-sm-4" %>
            <%= f.text_field :name_kana, autofocus: true, class: "col-sm-3" %>
          </div>
            
          <div class="field from-group col-xs-12">
            <%= f.label :"メールアドレス",class: "col-sm-4" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3" %>
          </div>
            
          <div class="field form-group col-xs-12"></br>
            <%= f.label :"郵便番号（ハイフンなし）", autofocus: true, class: "col-sm-4" %>
            <%= f.text_field :postal_code, class: "col-sm-3" %>
          </div>
            
          <div class="field form-group col-xs-12">
            <%= f.label :"住所", class: "col-sm-4" %>
            <%= f.text_field :address, autofocus: true, class: "col-sm-7"  %>
          </div>
            
          <div class="field form-group col-xs-12">
            <%= f.label :"電話番号（ハイフンなし）", class: "col-sm-4" %>
            <%= f.text_field :telephone_number, class: "col-sm-3" %>
          </div>
            
          <div class="form-group row">
            <div class="col-xs-3 col-xs-offset-2">
              <%= f.submit "編集内容を保存する", method: :put, class: "btn btn-primary" %>
            </div>
            <div class="col-xs-3 col-xs-offset-3">
              <%= link_to "退会する", withdrawal_customer_path, class: "btn btn-danger" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>