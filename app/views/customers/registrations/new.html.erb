<div class="container">
  <div class="row">
    <div class="d-flex text-center flex-column">
      <h2 class="head-line">新規会員登録</h2><br>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "customers/shared/error_messages", resource: resource %>

        <div class="field form-group"></br>
          <%= f.text_field :name, autofocus: true, placeholder: "名前" %>
        </div>
        
        <div class="field form-group">
          <%= f.text_field :name_kana, autofocus: true, placeholder: "フリガナ" %>
        </div>
        
         <div class="field form-group">
           <%= f.text_field :postal_code, placeholder: "郵便番号" %>
         </div>
         
         <div class="field form-group">
           <%= f.text_field :address, autofocus: true, placeholder: "住所"  %>
         </div>

        <div class="field form-group">
          <%= f.text_field :telephone_number, placeholder: "電話番号" %>
        </div>
        
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
        </div>

        <div class="field"><br>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
        </div>

        <div class="field"><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認用" %>
        </div>

        <div class="actions"><br>
          <%= f.submit "新規登録", class: "btn- btn-success btn-lg" %>
        </div>  
        
        <div class="new-link">
      　　<p class="head-line">既に登録済みの方は</p>
      　　<p class="new-link ">
       　　 <%= link_to "こちら", new_session_path(resource_name), data: {"turbolinks" => false}, class: "btn-link" %>からログインしてください。
      　　</p>
    　   </div>
       <% end %>
    </div>
  </div>
</div>
